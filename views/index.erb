<div class="slide-block-container">
    <div class="slide-block" data--50-top="background-color:rgb(255,255,255)" data-100-top="background-color:rgb(51,51,51);color:rgb(255,255,255)">
        <h2 class="slide-text">I help teams to craft great experiences</h2>
    </div>

    <div class="slide-block" data-0-top-top="background-color:rgb(0,0,255);transform[bounce]:rotate(0deg);" data-0-top-bottom="background-color:rgb(255,0,0);transform[bounce]:rotate(360deg);">
        <h2 class="slide-text">I help teams to craft great experiences</h2>
    </div>

    <div class="slide-block" data-0-top-top="background-color:rgb(0,0,255);transform[bounce]:rotate(0deg);" data-0-top-bottom="background-color:rgb(255,0,0);transform[bounce]:rotate(360deg);">
        <h2 class="slide-text">I help teams to craft great experiences</h2>
    </div>
</div>

<% if @js %>
    <% @js.each do |script| %>
        <%= "<script src='/js/#{script}.js'></script>" %>
    <% end %>
    <script type="text/javascript">
        $('document').ready(function(){
            skrollr.init();
        });
    </script>
<% end %>
